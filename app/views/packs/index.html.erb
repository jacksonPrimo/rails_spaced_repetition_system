<div class="max-w-4xl mx-auto mt-10 px-4">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Meus Packs</h1>
    <%= link_to 'Novo Pack', new_pack_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg shadow transition duration-200" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-md border border-gray-200">
    <ul class="divide-y divide-gray-200">
      <% @packs&.each do |pack| %>
        <li class="hover:bg-gray-50 flex items-center justify-between p-4">
          <div class="flex-1">
            <%= link_to pack.title, pack_path(pack), class: "text-lg font-medium text-indigo-600 hover:text-indigo-900" %>
          </div>
          <div class="flex space-x-3">
            <%= link_to 'Editar', edit_pack_path(pack), class: "text-sm text-gray-500 hover:text-gray-700" %>
            <%= button_to 'Excluir', pack_path(pack), method: :delete, form: { data: { turbo_confirm: "Tem certeza?" } }, class: "text-sm text-red-600 hover:text-red-800" %>
          </div>
        </li>
      <% end %>
      <% if @packs.blank? %>
        <li class="p-8 text-center text-gray-500 italic">Você ainda não criou nenhum pack.</li>
      <% end %>
    </ul>
  </div>
</div>