<div class="max-w-4xl mx-auto mt-10 px-4">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <%= link_to '← Voltar para a lista', packs_path, class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
      <h1 class="text-4xl font-extrabold text-gray-900 mt-2"><%= @pack.title %></h1>
    </div>
    
    <div class="flex space-x-3">
      <%= link_to 'Editar Nome', edit_pack_path(@pack), class: "bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-50 shadow-sm transition" %>
    </div>
  </div>

  <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-8 text-center">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 text-indigo-600 rounded-full mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
      </div>
      
      <div class="bg-white rounded-2xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="p-8">
          <h3 class="text-lg font-semibold text-gray-900 mb-6">Adicionar Novo Cartão</h3>
          
          <%= form_with(model: [@pack, Card.new], class: "space-y-4") do |f| %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <%# Campo Frente %>
              <div>
                <%= f.label :front, "Frente", class: "block text-left text-sm font-medium text-gray-500" %>
                <%= f.text_field :front, required: true, placeholder: "Ex: Apple", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2.5 border" %>
              </div>

              <%# Campo Costa %>
              <div>
                <%= f.label :back, "Costa (Resposta)", class: "block text-left text-sm font-medium text-gray-500" %>
                <%= f.text_field :back, required: true, placeholder: "Ex: Maçã", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2.5 border" %>
              </div>
            </div>

            <%# Campo Frase de Contexto %>
            <div>
              <%= f.label :context_phrase, "Frase de contexto (opcional)", class: "block text-left text-sm font-medium text-gray-500" %>
              <%= f.text_area :context_phrase, rows: 2, placeholder: "Ex: I love to eat a red apple in the morning.", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm p-2.5 border" %>
            </div>

            <div class="flex justify-end">
              <%= f.submit "Salvar Cartão", class: "inline-flex items-center px-6 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer transition" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-8 border-t border-gray-200 pt-8">
    <h4 class="text-sm font-semibold text-gray-500 uppercase tracking-wider">Estatísticas de Estudo</h4>
    <div class="mt-4 grid grid-cols-1 gap-5 sm:grid-cols-3">
      <div class="bg-gray-50 px-4 py-5 rounded-lg overflow-hidden sm:p-6 border border-gray-100">
        <dt class="text-sm font-medium text-gray-500 truncate">Total de Cartões</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900"><%= @total_cards %></dd>
      </div>
    </div>
  </div>
</div>